<!-- <%= %> EJS TAGS -->
<!-- While doing any logic statement don't use EJS tage with = sign simply use <%  %> -->
<!-- Equal sign returns the value and stick it into the HTML 
And No Equal sign will simply run the code -->

<%- include("partials/header") %>

<h1>
	The Posts Page
</h1>

<!-- WITH for LOOP -->
<% for(var i=0; i < posts.length; i++){ %>
	<li> 
		<%= posts[i].title %> - <strong><%= posts[i].author %></strong> 
	</li>
<% } %>

<!-- WITH forEach -->
<% posts.forEach(function(post){ %> 
	<li> 
		<%= post.title %> - <strong><%= post.author %></strong> 
	</li>
<% }) %>

<%- include("partials/footer") %>

